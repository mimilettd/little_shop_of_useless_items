<%= render "admin/shared/admin_side_nav" %>

<div style="margin-left:16%">
<%= render "admin/shared/admin_nav" %>

<i>Current Admins:</i><br>
<% @users.each do |user| %>
  <%= user.full_name %>  
  (<%= UserRole.find_role(@store, user) %>) - 
  <%= link_to "Remove", admin_user_role_path(user, store: @store), method: :delete, :data => {:confirm => 'Are you sure?'} %><br>
<% end %>

<hr>
<i>Add New Admin:</i><br>

<%= form_tag(admin_user_role_path(@store), action: 'show', method: "get") do %>
  <%= label_tag(:q, "Search user by email:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

</div>
