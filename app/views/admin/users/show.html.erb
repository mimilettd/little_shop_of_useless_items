<%= render "admin/shared/admin_side_nav" %>
<div style="margin-left:16%">
  <h4>My Stores</h4>

  <div class="stores">
    <% @stores.each do |store| %>
      <% if store.check_image %>
        <%= link_to (image_tag(store.image, class: "logo")), admin_store_path(store), class: store.name %><br>
      <% else %>
        <%= link_to (image_tag("https://i.pinimg.com/originals/45/d9/2e/45d92e009aefefb6303d8d8550e4a8eb.png",
                                class: "logo")), admin_store_path(store), class: store.name %><br>
      <% end %>

      <p class="logo"><b><%= store.name %></b> - <i><%= store.status.capitalize %></i></p>
      <% if current_user.platform_admin? %>
        <p class="logo">Platform Admin</p>
      <% else %>
        <p class="logo"><%= current_user.user_roles.find_by(store: store).role.name %></p>
      <% end %>
    <% end %>
    </div>
  </div>
